{
    "name": "mdehaas/piwikanalytics",
    "description": "Integrates Piwik Open Analytics Platform into your site. Please look at the roadmap on the GitHub repository for what the furure holds. Feel free fork on GitHub and create pull requests.",
    "type": "bolt-extension",
    "keywords" : [ "piwik", "analytics", "statistics", "tracking" ],
    "require": {
        "bolt/bolt": ">=2.0.0,<3.0.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Marcel de Haas", 
            "email": "marcel@bommelhaas.nl"
        }
    ],
	"minimum-stability" : "dev",
	"prefer-stable" : true,
    "autoload": {
        "files": [
            "init.php"
        ],
        "psr-4": {
            "Bolt\\Extension\\YourName\\ExtensionName\\": "",
            "Bolt\\Extension\\YourName\\ExtensionName\\Tests\\": "tests"
        }
    },
    
    "extra": {
        "bolt-icon": "piwik-icon.png"
    }
}
